{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2018",
    "lib": ["ES2018", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "lib",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["lib"],
  "exclude": ["node_modules", "dist"]
}
